{
  "name": "mcp-kit",
  "version": "1.0.0",
  "description": "A CLI tool to create MCP (Model Context Protocol) applications with ease.",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "build": "pnpm -r --aggregate-output --filter=./packages/* build",
    "dev": "pnpm -r --aggregate-output --filter=./packages/create-mcp-kit dev",
    "start": "pnpm -r --aggregate-output --filter=./packages/create-mcp-kit start",
    "test": "cross-env NODE_V8_COVERAGE=./coverage/tmp vitest run",
    "coverage": "rimraf coverage && cross-env NODE_V8_COVERAGE=./coverage/tmp vitest run && npm run report",
    "report": "c8 report --reporter=lcov --reporter=html",
    "docs:dev": "pnpm -r --aggregate-output --filter=./docs dev",
    "docs:build": "pnpm -r --aggregate-output --filter=./docs build",
    "docs:serve": "pnpm -r --aggregate-output --filter=./docs serve",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "author": "zhensherlock",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/my-mcp-hub/mcp-kit/issues"
  },
  "homepage": "https://github.com/my-mcp-hub/mcp-kit",
  "keywords": [
    "mcp",
    "mcp server",
    "mcp client",
    "mcp host",
    "mcp kit",
    "mcp tool kit",
    "mcp cli",
    "cli",
    "cli tool",
    "create mcp",
    "create mcp server",
    "create mcp client",
    "create mcp host",
    "modelcontextprotocol",
    "typescript"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "22",
    "@vitest/coverage-v8": "^4.0.2",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "execa": "^9.6.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rolldown": "1.0.0-beta.27",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.2"
  }
}
