{
  "name": "create-mcp-kit",
  "version": "1.0.0",
  "description": "A CLI tool to create MCP (Model Context Protocol) applications with ease.",
  "type": "module",
  "author": "zhensherlock",
  "homepage": "https://my-mcp-hub.github.io/mcp-kit/",
  "bin": {
    "create-mcp-kit": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "mcp server",
    "mcp client",
    "mcp host",
    "mcp kit",
    "mcp tool kit",
    "mcp cli",
    "cli",
    "cli tool",
    "create mcp",
    "create mcp server",
    "create mcp client",
    "create mcp host",
    "modelcontextprotocol",
    "typescript"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "dist",
    "template",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/my-mcp-hub/mcp-kit.git"
  },
  "scripts": {
    "clean:dist": "rimraf dist",
    "dev": "rolldown -c rolldown.config.ts --watch --no-clear-screen",
    "build:types": "tsc --noEmit",
    "build": "npm run clean:dist && npm run build:types && rolldown -c rolldown.config.ts"
  },
  "bugs": {
    "url": "https://github.com/my-mcp-hub/mcp-kit/issues"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@mcp-tool-kit/shared": "workspace:^",
    "gradient-string": "^3.0.0",
    "handlebars": "^4.7.8",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {}
}
