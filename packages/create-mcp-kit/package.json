    "mcp client",
    "mcp kit",
    "mcp tool kit",
    "create mcp",
    "create mcp server",
    "create mcp client",
    "modelcontextprotocol",
    "typescript"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "dist",
    "template",
    "LICENSE",
    "README.md"
  ],
