{
  "name": "create-mcp-kit",
  "version": "0.0.3",
  "description": "create mcp tool kit",
  "type": "module",
  "author": "zhensherlock",
  "homepage": "https://github.com/my-mcp-hub/mcp-kit/tree/master/packages/create#readme",
