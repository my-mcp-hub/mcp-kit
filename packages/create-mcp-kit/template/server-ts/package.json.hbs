{
  "name": "{{projectName}}",
  "version": "0.0.0",
  "description": "{{projectName}}",
  "author": "zhensherlock",
  "type": "module",
  "license": "MIT",
  "bin": {
    "{{projectName}}": "./build/index.js"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "main": "build/index.js",
  "scripts": {
{{#if (includes plugins 'style')}}
    "lint": "npx eslint \"src/**/*.{ts,js}\"",
{{/if}}
    "build": "tsc --noEmit && cross-env NODE_ENV=production node scripts/build.js",
{{#if (and (includes transports 'stdio') (or (includes transports 'streamable') (includes transports 'sse')))}}
    "dev": "npm run dev:stdio",
    "dev:stdio": "cross-env NODE_ENV=local concurrently \"tsc --noEmit --watch\" \"node scripts/dev.js\"",
{{else if (includes transports 'stdio')}}
    "dev": "npm run dev:stdio",
    "dev:stdio": "cross-env NODE_ENV=local concurrently \"tsc --noEmit --watch\" \"node scripts/dev.js\"",
{{else}}
    "dev": "npm run dev:web",
    "dev:web": "cross-env NODE_ENV=local TRANSPORT=web concurrently \"tsc --noEmit --watch\" \"node scripts/dev.js\"",
{{/if}}
{{#if (includes plugins 'vitest')}}
    "test": "vitest run",
    "report": "c8 report --reporter=lcov --reporter=html",
    "coverage": "rimraf coverage && npm run test && npm run report",
{{/if}}
{{#if (includes plugins 'changelog')}}
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -n changelog-option.js",
{{/if}}
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "dotenv": "^17.2.1",
{{#if (or (includes transports 'streamable') (includes transports 'sse'))}}
    "express": "^5.1.0",
    "nanoid": "^5.1.5",
{{/if}}
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
{{#if (includes plugins 'commitlint')}}
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
{{/if}}
{{#if (includes plugins 'inspector')}}
    "@modelcontextprotocol/inspector": "^0.16.2",
{{/if}}
{{#if (or (includes transports 'streamable') (includes transports 'sse'))}}
    "@types/express": "^5.0.3",
{{/if}}
    "@types/yargs": "^17.0.33",
{{#if (includes plugins 'style')}}
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
{{/if}}
{{#if (includes plugins 'vitest')}}
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
{{/if}}
{{#if (includes plugins 'changelog')}}
    "compare-func": "^2.0.0",
{{/if}}
    "concurrently": "^9.2.0",
{{#if (includes plugins 'changelog')}}
    "conventional-changelog-angular": "^8.0.0",
    "conventional-changelog-cli": "^5.0.0",
{{/if}}
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.8",
{{#if (includes plugins 'style')}}
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
{{/if}}
    "husky": "^9.1.7",
{{#if (includes plugins 'style')}}
    "lint-staged": "^16.1.5",
{{/if}}
{{#if (includes plugins 'vitest')}}
    "nyc": "^17.1.0",
{{/if}}
{{#if (includes plugins 'style')}}
    "prettier": "^3.6.2",
{{/if}}
{{#if (includes plugins 'inspector')}}
    "tree-kill": "^1.2.2",
{{/if}}
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
{{#if (includes plugins 'vitest')}}
    "vitest": "^3.2.4",
{{/if}}
    "rimraf": "^6.0.1"
  }
}
